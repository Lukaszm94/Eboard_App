<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kasia.myapplication.Battery">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.jjoe64.graphview.GraphView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/graph_battery" />

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="8"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            tools:context="com.inducesmile.gridlayouttutorial.Battery">
            <Space />

            <TextView
                android:id="@+id/text_battery_charge"
                android:text="Battery charge: "
                android:layout_column="0"
                android:layout_row="0"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_charge_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_voltage"
                android:text="Battery voltage: "
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_voltage_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell1"
                android:text="Cell 1: "
                android:layout_column="0"
                android:layout_row="2"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell1_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell2"
                android:text="Cell 2: "
                android:layout_column="0"
                android:layout_row="3"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell2_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell3"
                android:text="Cell 3: "
                android:layout_column="0"
                android:layout_row="4"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell3_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell4"
                android:text="Cell 4: "
                android:layout_column="0"
                android:layout_row="5"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell4_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_column="1"
                android:layout_row="5"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell5"
                android:text="Cell 5: "
                android:layout_column="0"
                android:layout_row="6"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell5_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_column="1"
                android:layout_row="6"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell6"
                android:text="Cell 6: "
                android:layout_column="0"
                android:layout_row="7"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text_battery_cell6_value"
                android:text="value"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_column="1"
                android:layout_row="7"
                android:layout_margin="5dp"
                android:textSize="20dp"/>

        </GridLayout>
    </LinearLayout>

</RelativeLayout>
