<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_current"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kasia.myapplication.Current">

    <GridLayout
        android:id="@+id/GridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        tools:context="com.inducesmile.gridlayouttutorial.Current">
        <Space />

        <TextView
            android:id="@+id/text_current"
            android:text="Current"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_momentCur"
            android:text="Momentary"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_avgCur"
            android:text="Average"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="5dp"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/text_current_i1"
            android:text="I1: "
            android:layout_column="0"
            android:layout_row="2"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i1_momentary_value"
            android:text="value"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i1_average_value"
            android:text="value: "
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i2"
            android:text="I2: "
            android:layout_column="0"
            android:layout_row="3"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i2_momentary_value"
            android:text="value"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i2_average_value"
            android:text="value: "
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i1i2"
            android:text="I1 + I2: "
            android:layout_column="0"
            android:layout_row="4"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i1i2_momentary_value"
            android:text="value"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_current_i1i2_average_value"
            android:text="value: "
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

    </GridLayout>


</RelativeLayout>
